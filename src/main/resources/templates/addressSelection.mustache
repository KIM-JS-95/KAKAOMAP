<script>
function button1_click() {
	var target1 = document.getElementById("add1");
    var target2 = document.getElementById("add2");
    var add = target1.options[target1.selectedIndex].text +" "+target2.options[target2.selectedIndex].text

$.ajax({
            type: 'POST',
            dataType: 'json',
            url: "/" + add,
            contentType:'application/json; charset=utf-8',
            data: JSON.stringify(add)
        }).done(function() {
            alert(add);
            window.location.href = '/'+add;
        }).fail(function (error) {
        alert(JSON.stringify(error));
        });

}
</script>

